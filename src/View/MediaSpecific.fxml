<BorderPane prefHeight="538.0" prefWidth="698.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MediaSpecificController">
   <top>
      <FlowPane prefHeight="0.0" prefWidth="698.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Pane prefHeight="538.0" prefWidth="345.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="titleLabel" layoutX="31.0" layoutY="57.0" prefHeight="41.0" prefWidth="325.0" style="-fx-text-fill: #14aaeb;" text="Title">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="categoriesLabel" layoutX="32.0" layoutY="99.0" prefHeight="17.0" prefWidth="290.0" style="-fx-text-fill: #14aaeb;" text="Categories" />
            <Label fx:id="ratingLabel" layoutX="32.0" layoutY="108.0" prefHeight="35.0" prefWidth="55.0" style="-fx-text-fill: #14aaeb;" text="Rating">
               <graphic>
                  <ImageView fitHeight="15.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/star.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Label>
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#goBack" prefHeight="32.0" prefWidth="9.0" style="-fx-background-color: #000000;">
               <graphic>
                  <ImageView fx:id="btBack" fitHeight="47.0" fitWidth="32.0" onMouseClicked="#goBack" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/kissclipart-arrow-icon-down-icon-891e56077966c796.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="playButton" layoutX="71.0" layoutY="202.0" mnemonicParsing="false" onAction="#playMovie" prefHeight="158.0" prefWidth="182.0" style="-fx-background-color: #000000;">
               <graphic>
                  <ImageView fitHeight="186.0" fitWidth="203.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/hiclipart.com.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="addButton" layoutX="14.0" layoutY="489.0" mnemonicParsing="false" onAction="#addCurrentMediaToUsersList" prefHeight="35.0" prefWidth="129.0" style="-fx-background-color: #000000;" text="Add to my list" textFill="#49a1ee">
               <graphic>
                  <ImageView fitHeight="36.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/pngkey.com-plus-sign-png-44913.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Label fx:id="addErrorLabel" layoutX="177.0" layoutY="498.0" textFill="#49a1ee" />
            <ComboBox fx:id="seasonComboBox" layoutX="32.0" layoutY="141.0" prefHeight="27.0" prefWidth="153.0" promptText="Seasons" />
            <ComboBox fx:id="episodeComboBox" layoutX="194.0" layoutY="141.0" prefWidth="150.0" promptText="Episodes" />
            <Button fx:id="removeButton" layoutX="23.0" layoutY="453.0" mnemonicParsing="false" onAction="#removeCurrentMediaFromUser" prefHeight="30.0" prefWidth="151.0" text="Remove from my list">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="1.0" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </Pane>
   </left>
   <center>
      <ImageView fx:id="mediaImage" fitHeight="398.0" fitWidth="309.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
